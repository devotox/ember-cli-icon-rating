<div
	class='icon-rating-wrapper'
	onmouseleave={{action 'mouseLeaveHandler'}}
>
	{{#each icons as |index|}}
		<div
			style='{{if width (html-safe (concat
				'width: ' width
			))}}'
			class='icon-rating-icon-wrapper'
		>
			{{#if showRatingAbove}}
				<div class='icon-rating-value'>
					{{index}}
				</div>
			{{/if}}

			{{component
				iconComponent
				(if (or
						(gte hover index)
						(and (not hover) (gte value index))
				) fillIcon baseIcon)
				size=size
				class='icon-rating-icon'
				click=(action 'clickHandler' index)
				mouseEnter=(action 'mouseEnterHandler' index)
				style=(html-safe (concat
					'color: '
					(if (or
						(gte hover index)
						(and (not hover) (gte value index))
					) fillColor baseColor)
				))
			}}

			{{#if showRatingBelow}}
				<div class='icon-rating-value'>
					{{index}}
				</div>
			{{/if}}
		</div>
	{{/each}}
</div>