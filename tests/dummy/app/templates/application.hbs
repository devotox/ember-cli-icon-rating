<h2 id="title">Ember CLI Icon Rating</h2>

<h3>Value: {{value}}</h3>

<br>
<h3>Default</h3>
{{icon-rating
	value=value
	onClick=(action (mut value))
}}

<br>
<br>
<h3>Min - 2 / Max - 10 / Step - 2</h3>
{{icon-rating
	min=2
	max=10
	step=2
	value=value
	onClick=(action (mut value))
}}

<br>
<br>
<h3>Disable Hover / Show Rating Above &amp; Below</h3>
{{icon-rating
	max=10
	size="2"
	value=value
	disableHover=true
	showRatingAbove=true
	showRatingBelow=true
	onClick=(action (mut value))
}}

<br>
<br>
<h3>Readonly</h3>
{{icon-rating
	max=10
	size=2
	value=1
	readOnly=true
}}

<br>
<br>
<h3>Large Sizes</h3>
{{icon-rating
	max=10
	size=3
	value=3
}}

<br>
<br>
<h3>Different Fill &amp; Base Color / Single Icon</h3>
{{icon-rating
	max=10
	size=4
	value=5
	icon="bug"
	baseColor="red"
	fillColor="green"
}}

<br>
<br>
<h3>Different Fill &amp; Base Icon / Single Color</h3>
{{icon-rating
	max=10
	size=5
	value=9
	color="red"
	fillIcon="heart"
	baseIcon="heart-o"
}}

<br>
<br>
<h3>Set 10% Width</h3>
{{icon-rating
	max=10
	size=5
	value=7
	icon="usd"
	width="10%"
}}